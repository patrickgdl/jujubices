{
  "ts-node": { "files": true },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    // "baseUrl": "./src",
    // "paths": {
    //   "~/*": ["*"]
    // },
    "typeRoots": ["./node_modules/types", "src/types"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,

    "skipLibCheck": true
  }
}
